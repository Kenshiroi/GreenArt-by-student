{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block body %}
    <h1>Utilisateur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PseudoUser</th>
                <th>ImageUser</th>
                <th>PasswordUser</th>
                <th>MailUser</th>
                <th>ConfirmUser</th>
                <th>RightUser</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.pseudoUser }}</td>
                <td>{{ utilisateur.imageUser }}</td>
                <td>{{ utilisateur.passwordUser }}</td>
                <td>{{ utilisateur.mailUser }}</td>
                <td>{{ utilisateur.confirmUser ? 'Yes' : 'No' }}</td>
                <td>{{ utilisateur.rightUser }}</td>
                <td>
                    <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}">show</a>
                    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_utilisateur_new') }}">Create new</a>
{% endblock %}
