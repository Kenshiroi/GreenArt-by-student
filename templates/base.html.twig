<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}accueil{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="stylesheet" href="https://www.bootswatch.com/5/lux/bootstrap.min.css">
			{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
			{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			{% endblock %}

			{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{% endblock %}
			{% if app.user %}
			<img src="{{ asset('images/' ~ app.user.image)}}" width="50" height="50"/>
			<p>Utilisateur connecté : {{ app.user.pseudo }}{% if "ROLE_ADMIN" in app.user.roles %} (ADMIN){%else%}{% if "ROLE_CREATOR" in app.user.roles %} (CREATEUR){% endif %}{% endif %}</p>
			<a href="{{ path('app_utilisateur_show', {'id': app.user.id}) }}">Profil</a>
			<a href="{{ path('app_logout', {'id': app.user.id}) }}">deconnexion</a>
			{% else %}
			<a href="{{ path('app_login') }}">Se connecter</a>
			<a href="{{ path('app_register') }}">S'inscrire</a>
			{% endif %}
		</head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
