{% extends 'base.html.twig' %}

{% block title %}Modele index{% endblock %}

{% block body %}
    <h1>Modele index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomModele</th>
                <th>ImageModele</th>
                <th>DescriptionModele</th>
                <th>DateAjout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for modele in modeles %}
            <tr>
                <td>{{ modele.id }}</td>
                <td>{{ modele.nomModele }}</td>
                <td><img src="{{ asset('images/' ~ modele.imageModele)}}" width="50" height="50"/></td>
                <td>{{ modele.descriptionModele }}</td>
                <td>{{ modele.dateAjout ? modele.dateAjout|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_model_any', {'id': modele.id}) }}">show</a>
                    <a href="{{ path('app_admin_editModel', {'id': modele.id}) }}">edit</a>
                    <a href="{{ path('app_admin_delModel', {'idModel': modele.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_addModel') }}">Ajouter modele</a>
{% endblock %}
