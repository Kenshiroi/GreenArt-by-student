{% extends 'base.html.twig' %}

{% block title %}Modele index{% endblock %}

{% block body %}
    <h1>Modele index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Image</th>
                <th>QuantiteStock</th>
                <th>Description</th>
                <th>Variante</th>
                <th>DateCreation</th>
                <th>PourcentageCreateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for modele in modeles %}
            <tr>
                <td>{{ modele.id }}</td>
                <td>{{ modele.nom }}</td>
                <td>{{ modele.prix }}</td>
                <td>{{ modele.image }}</td>
                <td>{{ modele.quantiteStock }}</td>
                <td>{{ modele.description }}</td>
                <td>{{ modele.variante }}</td>
                <td>{{ modele.dateCreation ? modele.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ modele.pourcentageCreateur }}</td>
                <td>
                    <a href="{{ path('app_modele_show', {'id': modele.id}) }}">show</a>
                    <a href="{{ path('app_modele_edit', {'id': modele.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_modele_new') }}">Create new</a>
{% endblock %}
